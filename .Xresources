! Fonts

URxvt.font: xft:Cascadia Code PL:style=SemiLight:size=13:antialias=true, xft:Cousine Nerd Font Mono:size=13:minspace=False, xft: JetBrainsMono Nerd Font Mono:size=13:minspace=False, xft: Symbola
URxvt.boldFont: xft:Cascadia Code PL:style=Bold:size=13:antialias=true
URxvt.italicFont: xft:Cascadia Code PL:style=SemiLight Italic:size=13:antialias=true
URxvt.boldItalicFont: xft:Cascadia Code PL:style=Bold Italic:size=13:antialias=true
URxvt.letterSpace: 0



! Other bits and bobs

*.scrollBar: false
*.cursorBlink: true



! URLs

URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.urlButton: 1



! Clipboard

URxvt.iso14755 : false
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:
